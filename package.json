{
  "name": "who-is-the-spy",
  "version": "1.0.0",
  "description": "A multiplayer WebSocket game where players try to find the spy",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.1",
    "tailwindcss": "^4.0.0"
  }
}
